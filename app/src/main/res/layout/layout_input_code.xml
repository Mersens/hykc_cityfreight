<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/img_close"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_gray_close"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_color"
                android:lineSpacingExtra="3dp"
                android:textSize="12sp"
                android:text="选择提现的账户与接单时签署的银行卡账户不一致,需要进行短信验证码认证。"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/icon_mobile"
                    android:layout_alignParentLeft="true"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_mobile_blue"
                    />

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_mobile"
                    android:textColor="@color/text_color_black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    tools:text="15738800385"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"

                    />
                <TextView
                    android:id="@+id/tv_getCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_mobile"
                    android:layout_centerVertical="true"
                    android:text="@string/get_code"
                    android:textColor="@color/base_color_text_white"
                    android:background="@drawable/tv_getcode_blue_bg"
                    android:paddingTop="4dp"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="10sp" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            >
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_black"
                    android:text="提现金额:"
                    />
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_black"
                    tools:text="100 元"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/money"
                    android:layout_marginLeft="8dp"
                    />

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <com.hykc.cityfreight.view.CodeEditText
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/codeEdit"
                android:layout_centerInParent="true"
                app:strokeBackground="@drawable/input_code_blue_bg"
                app:strokeHeight="30dp"
                app:strokeWidth="30dp"
                app:strokePadding="8dp"
                app:strokeLength="6"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_select_bg"
            android:text="确定"
            android:textColor="@color/base_color_text_white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
