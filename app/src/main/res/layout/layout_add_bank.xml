<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_text_white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/actionbar_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="添加银行卡"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_action_back" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#f8f8f8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:text="银行卡"
                    android:textColor="@color/actionbar_color"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tv_sb_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="4dp"
                    android:text="智能识别"
                    android:textColor="@color/actionbar_color"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_sb_bank"
                    android:src="@mipmap/ic_action_xj" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/base_color_text_white"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="真实姓名:"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/tv_name"
                        android:background="@null"
                        android:hint="银行卡开户人姓名"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#0f2536"
                        android:textColorHint="#CECECE"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_line_text" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_zh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="账户:"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/editAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/tv_zh"
                        android:background="@null"
                        android:hint="银行账号"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#0f2536"
                        android:textColorHint="#CECECE"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_line_text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_khyh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="开户银行:"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/editBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/tv_khyh"
                        android:background="@null"
                        android:hint="如：中国工商银行"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#0f2536"
                        android:textColorHint="#CECECE"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_line_text" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="开户行地址:"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/editAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/tv_address"
                        android:background="@null"
                        android:hint="请输入地址"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#0f2536"
                        android:textColorHint="#CECECE"
                        android:textSize="14sp" />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_line_text" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_img"

                    >
                    <TextView
                        android:id="@+id/tv_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="提示：绑定非本人银行卡，需要上传持卡人的身份证照片！"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        />
                <LinearLayout

                    android:layout_height="168dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/img_sfz_z"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="center"
                            android:background="#f8f8f8"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/icon_photo_yao" />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="身份证正面"
                            android:textColor="@color/text_color"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/img_sfz_z"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/img_sfz_f"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="center"
                            android:background="#f8f8f8"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/icon_photo_yao" />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="身份证反面"
                            android:textColor="@color/text_color"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/img_sfz_f"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/btn_select_bg"
                android:text="确定"
                android:textColor="@color/base_color_text_white"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                 />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
