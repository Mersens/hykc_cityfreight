<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:descendantFocusability="blocksDescendants"
        card_view:cardBackgroundColor="@color/base_color_text_white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_color_text_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_height="32dp"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:id="@+id/tv_start_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/text_color_black"
                        tools:text="郑州"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:layout_height="8dp"
                        android:layout_width="27dp"
                        android:src="@mipmap/icon_arr_right"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_start_addr"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/img_arr_right"
                        />
                    <TextView
                        android:id="@+id/tv_end_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/text_color_black"
                        tools:text="洛阳"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_arr_right"
                        android:layout_marginLeft="10dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    >
                    <TextView
                        android:id="@+id/creatTime"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_color"
                        android:textSize="12sp"
                        android:text="运输时间："
                        android:layout_alignParentLeft="true"
                        />
                    <TextView
                        android:id="@+id/tv_creatTime"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_color"
                        android:textSize="12sp"
                        tools:text="2019-09-20 12 00"
                        android:layout_toRightOf="@+id/creatTime"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                >
                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:id="@+id/img_statu_type"
                    android:src="@mipmap/icon_statu_jd"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_height="42dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:id="@+id/img_hwmc"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_hwmc"
                    />
                <TextView
                    android:id="@+id/tv_hwmc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="货物名称"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_hwmc"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:id="@+id/img_fhr"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_yf"
                    />
                <TextView
                    android:id="@+id/tv_fhr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="发货人"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_fhr"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:id="@+id/img_hc"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_hw_zz"
                    />
                <TextView
                    android:id="@+id/tv_zl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="重量"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_hc"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/color_line_text"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_height="36dp"
                    android:layout_width="36dp"
                    android:src="@mipmap/icon_sh_new"
                    android:id="@+id/img_sh"
                    android:layout_centerVertical="true"
                   android:layout_alignParentLeft="true"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/img_sh"
                    >
                    <TextView
                        android:id="@+id/tv_shrname"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:text="收货人"
                        android:textColor="@color/text_color_black"
                        android:layout_marginBottom="2dp"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                    <TextView
                        android:id="@+id/tv_shrdh"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:text="收货人电话"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_height="36dp"
                    android:layout_width="36dp"
                    android:src="@mipmap/icon_fh_new"
                    android:id="@+id/img_fh"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/img_fh"
                    >
                    <TextView
                        android:id="@+id/tv_fhrname"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:text="发货人"
                        android:textColor="@color/text_color_black"
                        android:layout_marginBottom="2dp"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                    <TextView
                        android:id="@+id/tv_fhrdh"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:text="发货人电话"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/color_line_text"
            />
        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            >
            <TextView
                android:id="@+id/bz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"
                android:textColor="@color/color_text_gray"
                android:text="备注："
                />
            <TextView
                android:id="@+id/tv_bz"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text_gray"
                android:textSize="12sp"
                tools:text="2019-09-20 12 00"
                android:layout_toRightOf="@+id/bz"
                android:ellipsize="end"
                android:maxLines="1"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <TextView
                android:id="@+id/tv_status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/actionbar_color"
                android:textSize="10sp"
                tools:text="状态"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/waybill_statu_bg"
                />
            <TextView
                android:id="@+id/tv_xq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginRight="10dp"
                android:textColor="#e9ac03"
                android:background="@drawable/tv_circle_bg"
                />
            <TextView
                android:id="@+id/tv_jj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒绝"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/tv_xq"
                android:textColor="@color/text_color_black"
                android:background="@drawable/tv_circle_bg"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_qx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginRight="12dp"
                android:visibility="gone"
                android:textColor="@color/text_color_black"
                android:background="@drawable/tv_circle_bg"
                android:layout_toLeftOf="@+id/tv_xq"
                />
        </RelativeLayout>


    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
