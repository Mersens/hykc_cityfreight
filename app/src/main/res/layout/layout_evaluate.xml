<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_text_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/actionbar_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="在线评价"
                android:textColor="@color/base_color_text_white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_action_close" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <View
                    android:id="@+id/v1"
                    android:layout_width="4dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:background="@color/actionbar_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/v1"
                    android:text="平台"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="信用评级"
                    android:textSize="14sp" />

                <com.cb.ratingbar.CBRatingBar
                    android:id="@+id/rating_bar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/name"
                    app:starCanTouch="true"
                    app:starCount="5"
                    app:starCoverColor="#298cf5"
                    app:starEndColor="#298cf5"
                    app:starFillColor="#ffffff"
                    app:starMaxProgress="5"
                    app:starPointCount="5"
                    app:starProgress="5"
                    app:starShowStroke="true"
                    app:starSize="20dp"
                    app:starSpace="8dp"
                    app:starStartColor="#298cf5"
                    app:starStrokeColor="#298cf5"
                    app:starStrokeWidth="1dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <View
                    android:id="@+id/v2"
                    android:layout_width="4dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:background="@color/actionbar_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/v2"
                    android:text="托运方"
                    android:textSize="14sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="信用评级"
                    android:textSize="14sp" />

                <com.cb.ratingbar.CBRatingBar
                    android:id="@+id/rating_bar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/name1"
                    app:starCanTouch="true"
                    app:starCount="5"
                    app:starCoverColor="#298cf5"
                    app:starEndColor="#298cf5"
                    app:starFillColor="#ffffff"
                    app:starMaxProgress="5"
                    app:starPointCount="5"
                    app:starProgress="5"
                    app:starShowStroke="true"
                    app:starSize="20dp"
                    app:starSpace="8dp"
                    app:starStartColor="#298cf5"
                    app:starStrokeColor="#298cf5"
                    app:starStrokeWidth="1dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_text" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="16dp"
                    android:background="@drawable/btn_select_bg"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/base_color_text_white" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
